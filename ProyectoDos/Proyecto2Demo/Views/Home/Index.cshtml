
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <title>AJAX Example</title>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>

                
<body>

<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">




                                <div class="d-flex align-items-center mb-3 pb-1">
                                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                    <span class="h1 fw-bold mb-0">ESAN</span>
                                </div>

                                <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Ingresar a la plataforma</h5>

                                <div class="form-outline mb-4 was-validated">
                                    <label class="form-label" for="username">Email estudiante</label><br />
                                    <input type="text" id="username" class="form-control form-control-lg" placeholder="Enter email" required/>
                                    <div class="valid-feedback">Valido.</div>
                                    <div class="invalid-feedback">Ingrese un correo valido</div>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="password">Password</label>
                                    <input type="password" id="password" class="form-control form-control-lg" required/>
                                </div>



                                <!--<div class="pt-1 mb-4">
                <a class="btn btn-dark btn-lg btn-block" onclick="sendData()"-->
                                @*href="@Url.Action("Formulario","Home")*@
                                <!--">Login</a>
            </div>-->

                                <button type="button" onclick="sendData()">Ingresar</button>



                                <a class="small text-muted" href="#!">¿Has olvidado tu contraseña?</a>
                                <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                    ¿No tienes una cuenta?
                                    <a href="#!" style="color: #393f81;">Registrate</a>
                                </p>
                                <a href="#!" class="small text-muted">Terms of use.</a>
                                <a href="#!" class="small text-muted">Privacy policy</a>


                            </div>
                        </div>

                        


                        @*AJAXXXXXXXXXXXXXXXXXX*@
                        <script>
                        function sendData() {
                            var username = $('#username').val();
                            var password = $('#password').val();

                            //Enviar las peticiones Ajax
                            $.ajax({
                                type: 'POST',
                                url: '@Url.Action("GuardarDatos", "Home")',
                                //Parametros
                                data :{ username: username, password: password },

                                success: function (a) {

                                    if (a == 1) {
                                        window.location.href = '@Url.Action("Formulario","Home")';
                                    }
                                    else {
                                        alert("Datos incorrectos , Vuelve a escribir la contraseña");
                                    }


                                },
                                error: function (error) {
                                    alert("Contraseña incorrecta", error);
                            }

                            });

                        }


                        </script>



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
    </body>
