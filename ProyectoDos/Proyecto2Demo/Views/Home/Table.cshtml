
@{
    ViewBag.Title = "Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Table</h2>

<form>
    <div class="row m-4">
        <div class="col">
            <label class="form-label">Nota de credito</label>
            <input type="text" class="form-control" name="ntCredito" value="" id="btnNota"/>

            <label class="form-label">Activo</label>
            <input type="text" class="form-control" name="name" value="" id="btnActivo"/>

            <label class="form-label">Proceso Matricula</label>
            <input type="text" class="form-control" name="name" value="" id="btnProceso"/>

            <label class="form-label">IdUsuario</label>
            <input type="text" class="form-control" name="name" value="" id="btnUsuario" />

            <label class="form-label">Visible</label>
            <input type="text" class="form-control" name="name" value="" id="btnVisible"/>
            <br />


            <button type="button" id="btnInsertar" class="btn btn-success">Insertar</button><br /> <br />
            @*<input type="text" id="txtDato" name="txtDato" />*@
        </div>
        
        
    </div>
</form>


<div class="row m-4">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                Ejemplo Crud con MVC en Datable con JQUERY
            </div>
            <div class="card-body">
                <table id="table" class="table">
                    <thead>
                        <tr>
                            <th>Nota de Credito</th>
                            <th>Activo</th>
                            <th>Proceso Matricula</th>
                            <th>IdUsuario</th>
                            <th>Visible</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                "ajax": {
                    "url": "@Url.Action("Listar","Home")",
                    "type": "GET",
                    "dataType": "json"
                },
                "columns": [
                    { "data": "NotaCodigo" },
                    { "data": "Activo" },
                    { "data": "ProcesoMatricula" },
                    { "data": "IdUsuario" },
                    { "data": "Visible" },
                ]
        });

 });    

    </script> 

    <script>
        $(document).ready(function () {
            $("#btnInsertar").click(function () {

                
                // Obtener el valor del input
                var ntCredito = $("#ntCredito").val();
                var ntCredito = $("#btnActivo").val();
                var ntCredito = $("#btnProceso").val();
                var ntCredito = $("#btnUsuario").val();
                var ntCredito = $("#btnVisible").val();
                //alert(ntCredito);
                //return;
                

                // Realizar la solicitud AJAX
                $.ajax({
                    url: "@Url.Action("InsertarDato", "Home")", // Ruta al método del controlador
                    type: "POST",
                    data: {
                        ntCredito: ntCredito
                    },
                    success: function (response) {
                        console.log(response);
                        // Manejar la respuesta del servidor
                        //if (response.success) {
                        //    alert(response.message);
                        //} else {
                        //    alert("Error: " + response.message);
                            
                        //}
                    },
                    error: function (error) {
                        alert("Error en la solicitud AJAX: " + error.statusText);
                    }
                });
            });
        });

    </script>


   
